<h2>Songs</h2>

<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>

  <% @songs.each do |song| %>
    <tr>
      <td><%= link_to song.name, song %></td>
      <td>
        <%= link_to 'Edit', edit_song_path(song), :class => "btn btn-mini" %>
        <%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' },
                    :class => "btn btn-mini btn-danger" %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Song', new_song_path, :class => "btn btn-primary" %>
