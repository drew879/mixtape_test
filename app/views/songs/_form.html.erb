<%= form_for(@song) do |f| %>
  <%= render :partial => 'shared/errors', :locals => {:model => @song} %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :artist_name %><br />
	<%= f.text_field :artist_name %> (or)
    <%= f.select :artist_id, Artist.all.collect{|a| [a.name, a.id]}, {:prompt => 'Pick Artist'} %>
  </div>

  <div class="field">
    <%= f.label :album_name %><br />
	<%= f.text_field :album_name %> (or)
    <%= f.select :album_id, Album.all.collect{|a| [a.name, a.id]}, {:prompt => 'Pick Album'} %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
