<%= form_for(@user) do |f| %>
  <%= render :partial => 'shared/errors', :locals => {:model => @user} %>

  <div>
    Name:
  </div>
  <div>
	<%= f.text_field :name %>
  </div>
  <div>
	Email:
  </div>
  <div>
    <%= f.text_field :email %>
  </div>
  <div>
	Password:
  </div>
  <div>
	<%= f.password_field :password %>
  </div>
  <div>
	Confirm:
  </div>
  <div>
	<%= f.password_field :password_confirmation %>
  </div>

    <%= f.submit %>
<% end %>
