<h2>Albums</h2>

<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>

  <% @albums.each do |album| %>
    <tr>
      <td><%= link_to album.name, album %></td>
      <td>
        <%= link_to 'Edit', edit_album_path(album), :class => "btn btn-mini" %>
        <%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-mini btn-danger" %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Album', new_album_path, :class => "btn btn-primary" %>
