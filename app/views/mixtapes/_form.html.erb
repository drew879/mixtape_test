<%= form_for @mixtape, :html => { :class => 'form-horizontal' } do |f| %>
  <%= render :partial => 'shared/errors', :locals => {:model => @mixtape} %>
  
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>

  <%= render :partial => 'shared/song_list', :collection => Song.all, :as => :song,
             :locals => {:parent => @mixtape, :name => 'mixtape'} %>

  <br />
  <div class="actions clear">
    <%= f.submit nil, :class => "btn btn-primary" %>
  </div>
<% end %>
