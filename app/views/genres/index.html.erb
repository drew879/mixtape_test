<h2>Genres</h2>

<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>

  <% @genres.each do |genre| %>
    <tr>
      <td><%= link_to genre.name, genre %></td>
      <td>
        <%= link_to 'Edit', edit_genre_path(genre), :class => "btn btn-mini" %>
        <%= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-mini btn-danger" %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Genre', new_genre_path, :class => "btn btn-primary" %>
